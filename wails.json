{
  "$schema": "https://wails.io/schemas/config.v2.json",
  "name": "Vultisig",
  "outputfilename": "vultisig",
  "packageManager": "yarn@4.5.2",
  "workspaces": [
    "frontend"
  ],
  "frontend:dir": "workspace/frontend",
  "frontend:install": "yarn install",
  "frontend:build": "yarn build",
  "frontend:dev:watcher": "yarn dev",
  "frontend:dev:serverUrl": "auto",
  "description": "Vultisig for Windows",
  "info": {
    "fileAssociations": [
      {
        "ext": "vult",
        "name": "Vultisig Backup",
        "description": "Vultisig backup file",
        "iconName": "appicon"
      }
    ],
    "protocols": [
      {
        "scheme": "vultisig",
        "description": "Vultisig application"
      }
    ]
  }
}